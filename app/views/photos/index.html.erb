<p id="notice"><%= notice %></p>

<h1>Photos</h1>

<table>
  <thead>
    <tr>
      <th>Car</th>
      <th>Name</th>
      <th>Image</th>
      <th>Photo</th>
      <th>Color</th>
      <th>Background</th>
      <th>Price</th>
      <th>Remark</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= photo.car_id %></td>
        <td><%= photo.name %></td>
        <td><%= photo.image %></td>
        <td><%= photo.photo %></td>
        <td><%= photo.color %></td>
        <td><%= photo.background %></td>
        <td><%= photo.price %></td>
        <td><%= photo.remark %></td>
        <td><%= link_to 'Show', photo %></td>
        <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
        <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @photos %>

<br>

<%= link_to 'New Photo', new_photo_path %>
